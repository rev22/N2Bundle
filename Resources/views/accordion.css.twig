.accordion,
.accordion ul,
.accordion li {
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
}
 
.accordion li {
    list-style: none;
}

.accordion li > lu 	   { max-height: 30%; overflow-y: scroll; }
.accordion li > .autohide  { display: none;  }
.accordion li:hover > ul   { display: block; }
